{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "pwa-chrome",
			"request": "launch",
			"name": "client",
			"url": "http://localhost:3000",
			"webRoot": "${workspaceFolder}/client/assets"
		},
		{
			"type": "pwa-chrome",
			"request": "launch",
			"name": "client-docker",
			"url": "http://localhost",
			"webRoot": "${workspaceFolder}/client/assets"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "server-docker",
			"port": 9229,
			"address": "localhost",
			"localRoot": "${workspaceFolder}/server/build",
			"remoteRoot": "/ulang/wasm/server/build",
			"protocol": "inspector"
		}
	],
	"compounds": [
		{
			"name": "client-server-docker",
			"configurations": [
				"client-docker",
				"server-docker"
			],
			"stopAll": true
		}
	]
}